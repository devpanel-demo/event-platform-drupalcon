<section class="site-hero container grid">
  <div class="site-hero__details">
    {% if event_details.field_dates.0 %}
      <span class="site-hero__details-item">
        {{- event_details.field_dates.value|date('M d') -}}
        -
        {{- event_details.field_dates.end_value|date('d, Y') -}}
      </span>
    {% endif %}
    {% if event_details.field_event_location_short_.0 %}
      <span class="site-hero__details-item">
        {{ event_details.field_event_location_short_.value }}
      </span>
    {% endif %}
  </div>
  <div class="site-hero__main">
    {% if event_details.field_event_name.0 %}
      <h1 class="site-hero__title">{{ event_details.field_event_name.value }}</h1>
    {% endif %}

     {% if event_details.field_hompage_description_text.0 %}
      <div class="site-hero__desc">
        {{ event_details_homepage_description_text }}
      </div>
     {% endif %}
  </div>
  <div class="site-hero__media">
    <button class="site-hero__play-pause" type="button" aria-pressed="false">Pause</button>
    <video
      loop
      autoplay
      muted
      playsinline
      poster="{{ pubsub_path }}/videos/fldc22-promo.webp"
      width="544"
      height="480"
    >
      <source src="{{ pubsub_path }}/videos/fldc22-promo.webm" type="video/webm">
      <source src="{{ pubsub_path }}/videos/fldc22-promo.mp4" type="video/mp4">
    </video>
    {% if event_details.field_homepage_media_cta.0 %}
      <a href="{{ event_details.field_homepage_media_cta.0.url }}" class="site-hero__media-cta">
        {{ event_details.field_homepage_media_cta.title }}
        {% include '@pubsub/includes/svg/arrow-right.svg' %}
      </a>
    {% endif %}
  </div>
</section>
